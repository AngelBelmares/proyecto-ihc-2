<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link
			rel="stylesheet"
			href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
		/>
		<link rel="stylesheet" href="css/styles.css" />
		<title>Tienda de Ropa</title>
	</head>

	<body>
		<header>
			<div class="top-banner">
				<a href="../">
					<img
						src="https://static.vecteezy.com/system/resources/thumbnails/022/927/275/small/clothing-store-logo-design-inspiration-cloth-shop-logo-clothes-logo-illustration-vector.jpg"
						alt=""
						class="img-container"
				/></a>
			</div>
			<div class="top-nav-bar">
				<div class="clasificaciones">
					<a href="">Hombres</a>
					<a href="">Mujeres</a>
					<a href="">Niños</a>
					<a href="">Accesorios</a>
				</div>
				<div class="right-header">
					<div class="search-bar">
						<form action="">
							<input type="text" placeholder="Search.." />
							<button><i class="fa-solid fa-magnifying-glass"></i></button>
						</form>
					</div>
					<div class="options">
						<div class="user-options">
							<a href=""
								><i class="fa-regular fa-user" style="color: #000000"></i
							></a>
						</div>
						<div class="user-cart">
							<a href=""
								><i class="fa-solid fa-cart-shopping" style="color: #000000"></i
							></a>
						</div>
					</div>
				</div>
			</div>
		</header>

		<div class="register-form">
			<div class="color">
				<span></span>
			</div>
			<h1>Registro</h1>
			<% if (error) { %>
				<div class="error">
					<p class="error-message"><%= error %></p>
				</div>
			<% } %>
			<% if (newUser) { %>
				<div class="success">
					<p class="success-message">Usuario registrado exitosamente</p>
				</div>
			<% } %>
			<form id="register-form" action="/register" method="POST">
				<div class="form-control">
					<label for="name">Nombre</label>
					<input
						type="text"
						name="name"
						id="name"
						placeholder="Nombre"
						required
						pattern="[A-Za-z]+"
					/>
					<span class="error-message" id="name-error"></span>
				</div>
				<div class="form-control">
					<label for="email">Correo Electrónico</label>
					<input
						type="email"
						name="email"
						id="email"
						placeholder="Correo Electrónico"
						required
						pattern=".+\.com$"
					/>
					<span class="error-message" id="email-error"></span>
				</div>
				<div class="form-control">
					<label for="password">Contraseña</label>
					<input
						type="password"
						name="password"
						id="password"
						placeholder="Contraseña"
						required
						minlength="8"
						pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
					/>
					<span class="error-message" id="password-error"></span>
				</div>
				<div class="form-control">
					<label for="password2">Repite la contraseña</label>
					<input
						type="password"
						name="password2"
						id="password2"
						placeholder="Contraseña"
						required
						minlength="8"
						pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
					/>
					<span class="error-message" id="password2-error"></span>
				</div>
				<a href="../login">¿Ya tienes una cuenta? Inicia Sesión</a>
				<div class="button-register">
					<button type="submit">Registrarse</button>
				</div>
			</form>
			<div class="success-message" id="success-message" style="display: none;">Registro exitoso</div>
			<div class="color">
				<span></span>
			</div>
		</div>
		
		<footer></footer>
		
		<script>
			const form = document.getElementById("register-form");
			const successMessage = document.getElementById("success-message");
		
			const nameInput = document.getElementById("name");
			const emailInput = document.getElementById("email");
			const passwordInput = document.getElementById("password");
			const password2Input = document.getElementById("password2");
		
			const nameError = document.getElementById("name-error");
			const emailError = document.getElementById("email-error");
			const passwordError = document.getElementById("password-error");
			const password2Error = document.getElementById("password2-error");
		
			form.addEventListener("submit", (event) => {
				// Prevent the form from submitting
				event.preventDefault();
		
				// Validate the name field
				if (nameInput.value.trim() === "") {
					nameError.textContent = "El nombre no puede estar vacío";
				} else if (nameInput.value.trim().length < 3) {
					nameError.textContent = "El nombre debe tener al menos 3 caracteres";
				} else {
					nameError.textContent = "";
				}
		
				// Validate the email field
				if (emailInput.value.trim() === "") {
					emailError.textContent = "El correo electrónico no puede estar vacío";
				} else if (!emailInput.value.trim().endsWith(".com")) {
					emailError.textContent = "El correo electrónico debe terminar en .com";
				} else {
					emailError.textContent = "";
				}
		
				// Validate the password field
				if (passwordInput.value.trim() === "") {
					passwordError.textContent = "La contraseña no puede estar vacía";
				} else if (passwordInput.value.trim().length < 8) {
					passwordError.textContent =
						"La contraseña debe tener al menos 8 caracteres";
				} else {
					passwordError.textContent = "";
				}
		
				// Validate the password2 field
				if (passwordInput.value !== password2Input.value) {
					password2Error.textContent = "Las contraseñas no coinciden";
				} else {
					password2Error.textContent = "";
				}
		
				// Submit the form if all fields are valid
				if (
					nameError.textContent === "" &&
					emailError.textContent === "" &&
					passwordError.textContent === "" &&
					password2Error.textContent === ""
				) {
					form.submit();
		
					successMessage.style.display = "block";
		
					// Hide the form
					form.style.display = "none";
				}
			});
		</script>
	</body>
</html>
